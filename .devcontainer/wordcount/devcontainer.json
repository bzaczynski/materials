{
  "name": "wordcount",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
  "workspaceFolder": "/workspaces/wordcount",
  "workspaceMount": "source=${localWorkspaceFolder}/wordcount,target=/workspaces/wordcount,type=bind",
  "postCreateCommand": "python -m pip install -r requirements.txt -e . && rm -rf src/*.egg-info/",
  "postAttachCommand": "echo 'ðŸ’¡ To evaluate your solution, run the pytest command.'",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/wordcount.py"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "settings": {
    "codespaces.trustedDomains": [
       "https://realpython.com"
    ]
  }
}
